name: Delete old workflow runs
on:
  schedule:
     - cron: '0 0 1 * *'

jobs:
  del_runs:
    runs-on: ubuntu-latest
    permissions:
      actions: write
    steps:
      - name: Delete workflow runs
        uses: Mattraks/delete-workflow-runs@v2
        with:
          token: ${{ github.token }}
          repository: ${{ Actionsflow }}
          retain_days: 30
          keep_minimum_runs: 10
