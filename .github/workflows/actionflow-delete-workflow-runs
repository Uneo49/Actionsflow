name: Delete old workflow runs
on:
  schedule:
    - cron: '45 14 8 8 3'

jobs:
  del_runs:
    runs-on: ubuntu-latest
    permissions:
      actions: write
    steps:
      - name: Delete workflow runs
        uses: Mattraks/delete-workflow-runs@v2
        with:
          token: ${{ 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 }}
          repository: ${{ Uneo49/Actionsflow }}
          retain_days: 30
          keep_minimum_runs: 10
